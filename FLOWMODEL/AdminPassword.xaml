<Window x:Class="FLOWMODEL.AdminPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:FLOW="clr-namespace:FLOWMODEL"
        Title="{DynamicResource AdminHeaderChangePassword}" Height="250" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="{DynamicResource LightBkgColorBrush}" Foreground="#FFE2E2E2" Icon="Content/MainIcon.png">
	<Grid>
		<Button x:Name="AdminPasswordSave" Content="{DynamicResource AdminChangePasswordSave}" HorizontalAlignment="Right" Margin="0,0,50,40" VerticalAlignment="Bottom" Width="130" Height="35" FontSize="14" Click="AdminPasswordSave_Click"/>
		<Button x:Name="AdminPasswordCancel" Content="{DynamicResource AdminChangePasswordCancel}" HorizontalAlignment="Left" Margin="50,0,0,40" VerticalAlignment="Bottom" Width="130" Height="35" FontSize="14" Click="AdminPasswordCancel_Click"/>
		<StackPanel Margin="50,45,50,0" VerticalAlignment="Top" Width="333">
			<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{DynamicResource AdminChangePassword}" FontSize="14" VerticalAlignment="Top"/>
			<PasswordBox x:Name="AdminLoginPassword" Margin="0, 10" Height="25" />
		</StackPanel>
	</Grid>
</Window>
