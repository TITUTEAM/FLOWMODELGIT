<Window x:Class="FLOWMODEL.SavingProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SavingProgressWindow" Height="150" Width="400" Background="{DynamicResource DarkBkgColorBrush}" Foreground="#FFE2E2E2" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
		<Border BorderBrush="{DynamicResource YellowTabButtonBrush}" BorderThickness="0, 3, 0, 0"/>
		<StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
			<Image Source="Content\LoadingIcon.png" Width="32" VerticalAlignment="Center"/>
			<TextBlock Text="{DynamicResource ReportSavingProcess}" FontSize="16" Margin="10" VerticalAlignment="Center"/>
		</StackPanel>
    </Grid>
</Window>
